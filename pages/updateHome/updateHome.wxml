<!--pages/updateHome/updateHome.wxml-->
<view class='imgDisposeBlock' wx:if="{{isShear}}">
  <!-- start 用户自动截取正方形照片 -->
  <!-- 裁剪区域   重要 -->
  <template name="we-cropper">
    <canvas class="cropper {{cutImage}}" disable-scroll="true" bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd" style="width:{{width}}px;height:{{height}}px;" canvas-id="{{id}}"></canvas>
  </template>
  <!-- 按钮，无所谓的东西 -->
  <view class="cropper-wrapper {{cutImage}}">
    <template is="we-cropper" data="{{...cropperOpt}}" />
    <view class='imgDisposeControlLine'>
      <view class='editBtn reelectBtn' bindtap="chooseImage">重新选择</view>
      <view class='editBtn editPerfectBtn' bindtap="getCropperImage">确定</view>
    </view>
  </view>
  <!-- end 用户自动截取正方形照片 -->
</view>
<view class="thepage" wx:else>
  <view class="inputblock">
    <text class="inputTitle">公告:</text>
    <input class="inputname" value="{{horn}}" placeholder="请输入公告" bindinput="gethorn"></input>
  </view>
  <view class="inputblock" bindtap='chooseImage' data-num="1">
    <text class="inputTitle">图一:</text>
    <input class="inputname" value="{{hasimg1}}" placeholder="请放入图片" disabled="true"></input>
  </view>
  <view class="inputblock" bindtap='chooseImage' data-num="2">
    <text class="inputTitle">图二:</text>
    <input class="inputname" value="{{hasimg2}}" placeholder="请放入图片" disabled="true"></input>
  </view>
  <view class="inputblock">
    <text class="inputTitle">样式预览:</text>
        <view class='img-back' wx:key='id'>
          <view class='classify-input1'>
              <image class='fruit' src='{{img1}}' mode='aspectFit' bindtap='fruitClassify' data-id='{{item.id}}'></image>
              <!-- 字体分类 -->
              <view class='classify-text'>
                <text class='text-text'>{{categoryName}}</text>
              </view>
          </view>
        </view>
        <view class='img-back' wx:key='id' style="margin-left:20rpx">
          <view class='classify-input1'>
              <image class='fruit' src='{{img2}}' mode='aspectFit' bindtap='fruitClassify' data-id='{{item.id}}'></image>
              <!-- 字体分类 -->
              <view class='classify-text'>
                <text class='text-text'>{{categoryName}}</text>
              </view>
          </view>
        </view>
  </view>  
  <view class="shop_car_total">
    <view class='shop_total_right'> 
        <!-- 一个都没选择，展示灰色结算按钮 --> 
        <view class='btn_result_all_red' style="background:#5076ab" bindtap='updateHome' >提交</view> 
        <view class='btn_result_all_red' bindtap='turnPreview'>取消</view> 
    </view>
  </view>
</view>
