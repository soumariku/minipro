.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:10px;
  /* background-color: #5076ab; */
  background: linear-gradient(180deg, #5076ab 0%,#91bef0 100%);
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.order-icon {
  width: 64rpx;
  height: 64rpx;
  margin: 5px;
  align-items: center;
  justify-content: center; 
}

.order-text{
  color:#8a8a8a;
  font-size:12px;
  display: block;
  align-items: center;
  justify-content: center; 
  margin-bottom: 5px;
}

.order-item{
  display: inline-block;
  width: 25%;
  text-align: center;
  justify-content: center;  
}

.userinfo-nickname {
  color: #fff;
}
