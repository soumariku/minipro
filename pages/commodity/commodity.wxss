/* tab选项卡 */
.tab-container{
  position:relative;
}
.tab-list{
  width:200rpx;
  height:550rpx;
 
}
.tab-list>view{
  width:100%;
  height:110rpx;
  line-height:110rpx;
  text-align:center;
  font-size:32rpx;
}
.noclick{
  background:#f9f9f9;
  color:#333333;
}
.click{
  background:#fff;
  color:#ff7e00;
}
.tab-detail{
  position:absolute;
  top:10rpx;
  left:200rpx;
  width:550rpx;
  box-sizing:border-box;
  background:#fff;
}

/* 商品详情 */
.tab-item{
  width:180rpx;
  height:180rpx;
  text-align:center;
  font-size:30rpx;
  float:left;
}
.tab-item>image{
  width:125rpx;
  height:125rpx;
  display:block;
  margin:0 auto;
}
